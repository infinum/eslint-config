{
  "extends": [
    "tslint:recommended",
    "tslint-angular",
    "rxjs-tslint-rules"
  ],
  "rulesDirectory": [
    "codelyzer"
  ],
  "rules": {
    "array-type": [true, "generic"],
    "no-console": [true, "log", "info", "table"],
    "rxjs-finnish": {
      "options": [{
        "functions": false,
        "methods": false,
        "parameters": true,
        "properties": true,
        "variables": true
      }],
      "severity": "warning"
    },
    "rxjs-no-exposed-subjects": {
      "severity": "warning"
    }
  }
}
